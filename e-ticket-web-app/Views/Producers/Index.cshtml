@model IEnumerable<Producer>

@{
    ViewData["title"] = "List of Producers";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width:150px">
                        </td>
                        <td class="align-middle">
                            @* @Html.DisplayNameFor(modelitem => item.FullName)*@
                            @item.FullName
                        </td>
                        <td class="align-middle">
                            @* @Html.DisplayNameFor(modelitem => item.Bio)*@
                            @item.Bio
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Producers" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-outline-info" asp-controller="Producers" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-outline-danger" asp-controller="Producers" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="text-white" style="position:fixed; right:25px; bottom:25px;">
    <a asp-controller="Producers" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle me-2"></i>Add New</a>
</div>