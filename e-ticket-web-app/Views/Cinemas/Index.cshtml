@model IEnumerable<Cinema>

@{
    ViewData["title"] = "List of Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.LogoUrl)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.LogoUrl" alt="@item.Name" style="max-width:150px">
                        </td>
                        <td class="align-middle">
                            @* @Html.DisplayNameFor(modelitem => item.FullName)*@
                            @item.Name
                        </td>
                        <td class="align-middle">
                            @* @Html.DisplayNameFor(modelitem => item.Bio)*@
                            @item.Description
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Cinemas" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-outline-info" asp-controller="Cinemas" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-outline-danger" asp-controller="Cinemas" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="text-white" style="position:fixed; right:25px; bottom:25px;">
    <a asp-controller="Cinemas" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle me-2"></i>Add New</a>
</div>